@model Instructor
@{
    ViewBag.Title = "New";
    
}
@{
	SelectList deptopt = new SelectList(ViewBag.Departments, "DeptId", "DeptName");
	SelectList crsopt = new SelectList(ViewBag.Courses, "Id", "Name");
}


<form method="post" asp-action="SaveNew" asp-controller="Instructor" >
	<input type="hidden" asp-for="Id"/>
	<div class="form-group">
		<label asp-for="Name"></label>
		<input asp-for="Name" class="form-control"/>
		<span style="color:red" asp-validation-for="Name"></span>
	</div>

	<div class="form-group">
		<label asp-for="Salary" ></label>
		<input asp-for="Salary" class="form-control"/>
	</div>

	<div class="form-group">
		<label asp-for="Address" ></label>
		<input asp-for="Address" class="form-control"/>
	</div>

	<div class="form-group">
		<label asp-for="Image" ></label>
		<input asp-for="Image" class="form-control"/>
	</div>

	<div class="form-group">
		<label asp-for="DeptId" >Department</label>
		@*<input asp-for="DeptId" class="form-control"/>*@
		<select asp-for="DeptId" asp-items="deptopt" class="form-control"></select>
	</div>

	<div class="form-group">
		<label asp-for="CrsId" >Course</label>
		<select asp-for="CrsId" asp-items="crsopt" class="form-control"></select>
	</div>

	<br/>
	<button type="submit" class="btn btn-outline-primary">Save</button>
</form>




